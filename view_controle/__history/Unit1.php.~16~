class Page1 extends Page
{
   public $Button1 = null;
   public $Edit1 = null;
   function Button1Click($sender, $params)
   {
      $dataMySql = '2020-03-04';
      echo "<br>$dataMySql";
      $ano = substr($dataMySql, 0, 4);
      $mes = substr($dataMySql, 3, 2);
      $dia = substr($dataMySql, 4, 2);
      for($i = 0; $i < 11; $i++)
      {
         echo '<br>substr($dataMySql,' . $i . ',2)==>' . substr($dataMySql, $i, 2);

      }
      $ano = substr($dataMySql, 0, 4);
      $mes = substr($dataMySql, 5, 2);
      $dia = substr($dataMySql, 8, 2);
      $data="$dia/$mes/$ano";
      echo "<br> $data";

   }
}

global $application;

global $Page1;

//Creates the form
$Page1 = new Page1($application);

